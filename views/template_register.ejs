<!-- MODALS FOR MESSAGES -->
<div class="modal_custom" data-id="register">
    <span class="icon-exit form" data-id="register">
            <svg class="icon icon-exit">
                <use xlink:href="#icon-exit" xmlns:xlink="http://www.w3.org/1999/xlink"></use>
            </svg>
        </span>
    <div class="modal_custom__body">
        <div class="message_container register_form_container animated fadeInUp">
            <% if(errors) { %>
            <!-- Error messages -->
                <div class="errors animated fadeInUp">
                    <% for(var err in errors[0]) { %>
                        <p><a href="#<%- err%>"><i class="material-icons mdl-list__item-icon">error</i><%- errors[0][err]%></a></p>
                    <% } %>
                </div>
            <% } %>
            
            <% if(msg) { %>
            <!-- Success message -->
                <div class="success animated fadeInUp text-center">
                    <%- msg[0] %>
                    </div>
            <% } %>
            
            <!-- MESSAGE FORM -->
            <form action="/" method="post" id="register_form" class="<% if(msg) { %>hidden<% } %>" autocomplete="off">
                <div class="text-center title_heading"><h2 class="underline">Register</h2></div>
                <!-- NAME -->
                <div class="form-group">
                    <span class="input input--nao">
                        <input class="input__field input__field--nao smaller-font" type="text" id="register_Fullname" name="register_Fullname" value="<% if(postParams) { %><%- postParams[0].register_Fullname %><% } %>"/>
                        <label class="input__label input__label--nao" for="register_Fullname">
                            <span class="input__label-content input__label-content--nao">Full name</span>
                        </label>
                        <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                            <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
                        </svg>
                    </span>
                </div>
                <!-- NAME ENDS -->
                
                <!-- EMAIL -->
                <div class="form-group">
                    <span class="input input--nao">
                        <input class="input__field input__field--nao smaller-font" type="text" id="register_Email" name="register_Email" value="<% if(postParams) { %><%- postParams[0].register_Email %><% } %>"/>
                        <label class="input__label input__label--nao" for="register_Email">
                            <span class="input__label-content input__label-content--nao">Email</span>
                        </label>
                        <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                            <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
                        </svg>
                    </span>
                </div>
                <!-- EMAIL ENDS -->
                
                <!-- USERNAME -->
                <div class="form-group">
                    <span class="input input--nao">
                        <input class="input__field input__field--nao smaller-font" type="text" id="register_Username" name="register_Username" autocomplete="off" value="<% if(postParams) { %><%- postParams[0].register_Username %><% } %>"/>
                        <label class="input__label input__label--nao" for="register_Username">
                            <span class="input__label-content input__label-content--nao">Username</span>
                        </label>
                        <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                            <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
                        </svg>
                    </span>
                </div>
                <!-- USERNAME ENDS -->
                
                <!-- PASSWORD -->
                <div class="form-group">
                    <span class="input input--nao">
                        <input class="input_password input__field input__field--nao smaller-font" type="password" id="register_Password" name="register_Password" autocomplete="off" value="<% if(postParams) { %><%- postParams[0].register_Password %><% } %>"/>
                        <label class="input__label input__label--nao" for="register_Password">
                            <span class="input__label-content input__label-content--nao">Password</span>
                        </label>
                        <i class="material-icons mdl-list__item-icon password" >visibility</i>
                        <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                            <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
                        </svg>
                    </span>
                </div>
                <!-- PASSWORD ENDS -->
                
                <!-- DOMAIN -->
                <div class="form-group">
                    <span class="input input--nao">
                        <input class="input__field input__field--nao smaller-font" type="text" id="register_Domain" name="register_Domain" value="<% if(postParams) { %><%- postParams[0].register_Domain %><% } %>"/>
                        <label class="input__label input__label--nao" for="register_Domain">
                            <span class="input__label-content input__label-content--nao">Domain</span>
                        </label>
                        <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                            <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
                        </svg>
                    </span>
                </div>
                <!-- DOMAIN ENDS -->
                
                <!-- MESSAGE -->
                <div class="form-group">
                    <span class="input input--nao textarea">
                        <textarea class="input__field input__field--nao smaller-font" id="register_Message" name="register_Message"><% if(postParams) { %><%- postParams[0].register_Message %><% } %></textarea>
                        <label class="input__label input__label--nao" for="register_Message">
                            <span class="input__label-content input__label-content--nao">How do you intend to use the API?</span>
                        </label>
                        <svg class="graphic graphic--nao" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                            <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"/>
                        </svg>
                    </span>
                </div>
                <!-- MESSAGE ENDS -->
                <div class="text-center">
                    <button type="submit" class="full-width mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">SEND</button>
                </div>
            </form>
            <!-- MESSAGE FORM ENDS -->
        </div>
    </div>
</div>